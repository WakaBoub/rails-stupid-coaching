  <h1>Stupid Coaching</h1>

  <div class="border-start border-5 mt-4 mb-4 p-2">
    <p><%= @question %></p>
    <p class="fst-italic">-You</p>
  </div>
  <div class="border-start border-5 mb-3 p-2 bg-warning text-dark bg-opacity-25 w-50">
